{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Message used for a single job with contents and the associated (raw) PreparedSample.",
    "title": "JobMessage",
    "type": "object",
    "properties": {
        "job": {
            "oneOf": [
                {
                    "$ref": "../logical_model/MxExperiment.json"
                },
                {
                    "$ref": "../logical_model/MxProcessing.json"
                }
            ]
        },
        "sample": {
            "$ref": "../data/CrystallographicSample.json"
        }
    },
    "required": [
      "job",
      "sample"
    ]
}