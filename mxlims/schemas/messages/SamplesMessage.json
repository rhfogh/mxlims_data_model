{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Message containing Samples together with their content links",
    "title": "SamplesMessage",
    "type": "object",
    "properties": {
        "samples": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../logical_model/CrystallographicSample.json"
                    }
                ]
            },
            "minItems": 1
        }
    },
    "required": [
      "samples"
    ]
}