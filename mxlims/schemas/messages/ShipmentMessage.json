{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Message used for shipments. Samples have no content links and must be linked using preparedSampleId",
    "title": "ShipmentMessage",
    "type": "object",
    "properties": {
        "shipment": {
            "oneOf": [
                {
                    "$ref": "../logical_model/DewarShipment.json"
                },
                {
                    "$ref": "../logical_model/PlateShipment.json"
                }
            ]
        },
        "samples": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../data/CrystallographicSample.json"
                    }
                ]
            },
            "minItems": 1
        }
    },
    "required": [
      "shipment",
      "samples"
    ]
}