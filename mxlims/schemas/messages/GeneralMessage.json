{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Message containing all possible objects, without JSON content links",
    "title": "GeneralMessage",
    "type": "object",
    "properties": {
        "jobs": {
            "description": "List of directly contained Jobs.",
            "title": "Jobs",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../data/MxProcessing.json"
                    },
                    {
                        "$ref": "../data/MxExperiment.json"
                    }
                ]
            }
        },
        "datasets": {
            "description": "List of directly contained Datasets.",
            "title": "Datasets",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../data/CollectionSweep.json"
                    },
                    {
                        "$ref": "../data/ReflectionSet.json"
                    }
                ]
            }
        },
        "preparedSamples": {
            "description": "List of directly contained Prepared Samples.",
            "title": "Prepared Samples",
            "type": "array",
            "items": {
                "$ref": "../data/CrystallographicSample.json"
            }
        },
        "logisticalSamples": {
            "description": "List of directly contained Logistical Samples.",
            "title": "Logistical Samples",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../data/Shipment.json"
                    },
                    {
                        "$ref": "../data/Dewar.json"
                    },
                    {
                        "$ref": "../data/Plate.json"
                    },
                    {
                        "$ref": "../data/Puck.json"
                    },
                    {
                        "$ref": "../data/PlateWell.json"
                    },
                    {
                        "$ref": "../data/Pin.json"
                    },
                    {
                        "$ref": "../data/WellDrop.json"
                    },
                    {
                        "$ref": "../data/PinPosition.json"
                    },
                    {
                        "$ref": "../data/DropRegion.json"
                    },
                    {
                        "$ref": "../data/Crystal.json"
                    }
                ]
            }
        }
    }
}
