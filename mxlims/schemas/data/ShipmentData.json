{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Shipment",
    "title": "ShipmentData",
    "type": "object",
    "properties": {
        "proposalCode": {
            "type": "string",
            "description": "The proposal number at the receiving facility.",
            "examples": [
                "mx1234"
            ]
        },
        "sessionNumber": {
            "type": "integer",
            "description": "The session number within the proposal. If this property is not set, the shipment is for unattended collection.",
            "minimum": 1
        },
        "annotation": {
            "type": "string",
            "description": "Comments about the shipment.",
            "maxLength": 250
        },
        "labContactOutbound": {
            "allOf": [
                {
                    "$ref": "../datatypes/Person.json"
                }
            ],
            "description": "Lab contact outbound"
        },
        "labContactReturn": {
            "allOf": [
                {
                    "$ref": "../datatypes/Person.json"
                }
            ],
            "description": "Lab contact for return"
        },
        "identifiers": {
            "additionalProperties": {
                "type": "string"
            },
            "description": "Dictionary str:str of contextName: identifier. ContextName will typically refer to a LIMS, database, or web site but could also be e.g. 'smiles' or 'sequence'",
            "title": "Identifiers",
            "type": "object"
        },
        "trackingDevice": {
            "allOf": [
                {
                    "$ref": "../datatypes/TrackingDevice.json"
                }
            ],
            "description": "Shipment tracking device"
        }
    },
    "required": [
        "proposalCode"
    ]
}
