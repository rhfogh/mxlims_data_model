{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A crystallization plate",
    "title": "PlateData",
    "type": "object",
    "properties": {
        "barcode": {
            "type": "string",
            "description": "The plate barcode or other identifier"
        },
        "plateType": {
            "allOf": [
                {
                    "$ref": "../datatypes/PlateType.json"
                }
            ],
            "description": "Plate type description object"
        },
        "trackingDevice": {
            "allOf": [
                {
                    "$ref": "../datatypes/TrackingDevice.json"
                }
            ],
            "description": "Plate tracking device"
        }
    }
}
