{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Base class for MXLIMS Prepared Samples describing Sample content",
    "title": "Sample Data",
    "type": "object",
    "allOf": [
        {
            "$ref": "../data/MxlimsObjectData.json"
        }
    ],
    "properties": {
        "name": {
            "type": "string",
            "description": "Sample human-readable name or acronym."
        },
        "acronym": {
            "description": "Acronym - short synonym for Sample",
            "title": "Acronym",
            "type": "string"
        },
        "campaignName": {
            "type": "string",
            "description": "String identifier / name for campaign of which Sample is part."
        },
        "components": {
            "description": "Other components of Sample",
            "items": {
                "$ref": "../datatypes/SampleComponent.json"
            },
            "title": "Sample components",
            "type": "array"
        }
    }
}
