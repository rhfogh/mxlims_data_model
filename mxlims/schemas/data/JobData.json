{
    "$id": "https://mxlims.org/schemas/data/JobData.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Base class for MXLIMS Jobs - an experiment or calculation producing Datasets",
    "title": "Job Data",
    "type": "object",
    "allOf": [
        {
            "$ref": "../data/MxlimsObjectData.json"
        }
    ],
    "properties": {
        "startTime": {
            "format": "date-time",
            "type": "string",
            "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])T([01][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9](\\.[0-9]+)?(Z|[+-]([01][0-9]|2[0-3]):[0-5][0-9])?$",
            "description": "Actual starting time for job or calculation, ",
            "title": "Start Time"
        },
        "endTime": {
            "format": "date-time",
            "type": "string",
            "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])T([01][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9](\\.[0-9]+)?(Z|[+-]([01][0-9]|2[0-3]):[0-5][0-9])?$",
            "description": "Actual finishing time for job or calculation, ",
            "title": "End Time"
        },
        "jobStatus": {
            "allOf": [
                {
                    "$ref": "../datatypes/JobStatus.json"
                }
            ],
            "description": "Status of job - enumerated, ",
            "examples": [
                "Template",
                "Ready",
                "Running",
                "Completed",
                "Failed",
                "Aborted"
            ]
        }
    }
}
