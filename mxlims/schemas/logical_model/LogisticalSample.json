{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Base class for MXLIMS Logistical Samples\n\ndescribing Sample containers and locations\n(from Dewars and Plates to drops, pins and crystals)",
    "title": "LogisticalSample",
    "type": "object",
    "allOf": [
        {
            "$ref": "../db_model/LogisticalSample.json"
        }
    ],
    "properties": {
        "container": {
            "$ref": "../logical_model/LogisticalSample.json"
        },
        "contents": {
            "type": "array",
            "items": {
                "$ref": "../logical_model/LogisticalSample.json"
            }
        },
        "sample": {
            "$ref": "../logical_model/PreparedSample.json"
        },
        "jobs": {
            "type": "array",
            "items": {
                "$ref": "../logical_model/Job.json"
            }
        },
        "datasets": {
            "type": "array",
            "items": {
                "$ref": "../logical_model/Dataset.json"
            }
        }
    }
}
