{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "A puck containing mounted crystals on pins, with typed JSON containment lists.",
    "title": "Puck",
    "type": "object",
    "allOf": [
        {
            "$ref": "../db_model/Puck.json"
        }
    ],
    "properties": {
        "container":{
            "$ref": "../logical_model/Dewar.json"
        },
        "contents": {
            "type": "array",
            "items": {
                "$ref": "../logical_model/Pin.json"
            },
            "minItems": 1
        }
    }
}