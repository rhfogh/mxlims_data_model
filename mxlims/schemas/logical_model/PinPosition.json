{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "An independent Position within a Pin where crystals can be located, with typed JSON containment lists.",
    "title": "PinPosition",
    "type": "object",
    "allOf": [
        {
            "$ref": "../db_model/PinPosition.json"
        }
    ],
    "properties": {
        "container": {
            "$ref": "../logical_model/Pin.json"
        },
        "contents": {
            "type": "array",
            "items": {
                "$ref": "../logical_model/Crystal.json"
            }
        },
        "sample": {
            "$ref": "../logical_model/CrystallographicSample.json"
        },
        "jobs": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../logical_model/MxExperiment.json"
                    },
                    {
                        "$ref": "../logical_model/MxProcessing.json"
                    }
                ]
            }
        },
        "datasets": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../logical_model/CollectionSweep.json"
                    },
                    {
                        "$ref": "../logical_model/ReflectionSet.json"
                    }
                ]
            }
        }
    }
}
