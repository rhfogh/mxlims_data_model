{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Crystallography experiment, with typed JSON containment lists",
    "title": "MxExperiment",
    "type": "object",
    "allOf": [
        {
            "$ref": "../db_model/MxExperiment.json"
        }
    ],
    "properties": {
        "logisticalSample": {
            "anyOf": [
                {
                    "$ref": "../logical_model/Crystal.json"
                },
                {
                    "$ref": "../logical_model/DropRegion.json"
                },
                {
                    "$ref": "../logical_model/Pin.json"
                },
                {
                    "$ref": "../logical_model/PinPosition.json"
                },
                {
                    "$ref": "../logical_model/PlateWell.json"
                },
                {
                    "$ref": "../logical_model/WellDrop.json"
                }
            ]
        },
        "sample": {
            "$ref": "../logical_model/CrystallographicSample.json"
        },
        "startedFrom": {
            "$ref": "../logical_model/MxExperiment.json"
        },
        "results": {
            "type": "array",
            "items": {
                "$ref": "../logical_model/CollectionSweep.json"
            }
        },
        "referenceData": {
            "type": "array",
            "items": {
                "$ref": "../logical_model/ReflectionSet.json"
            }
        },
        "templateData": {
            "type": "array",
            "items": {
                "$ref": "../logical_model/CollectionSweep.json"
            }
        }
    }
}
