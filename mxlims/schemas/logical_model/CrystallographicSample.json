{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Crystallographic Sample, with typed JSON containment lists",
    "title": "Crystallographic Sample",
    "type": "object",
    "allOf": [
        {
            "$ref": "../db_model/CrystallographicSample.json"
        }
    ],
    "properties": {
        "logisticalSamples": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../logical_model/Crystal.json"
                    },
                    {
                        "$ref": "../logical_model/DropRegion.json"
                    },
                    {
                        "$ref": "../logical_model/Pin.json"
                    },
                    {
                        "$ref": "../logical_model/PinPosition.json"
                    },
                    {
                        "$ref": "../logical_model/PlateWell.json"
                    },
                    {
                        "$ref": "../logical_model/WellDrop.json"
                    }
                ]
            }
        },
        "jobs": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "../logical_model/MxExperiment.json"
                    },
                    {
                        "$ref": "../logical_model/MxProcessing.json"
                    }
                ]
            }
        }
    }
}
