{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Base class for MXLIMS Datasets",
    "title": "Dataset",
    "type": "object",
    "properties": {
        "sourceId": {
            "description": "uuid for Dataset source",
            "title": "SourceId",
            "type": "string",
            "format": "uuid",
            "pattern":"^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },
        "derivedFromId": {
            "description": "uuid for Dataset from which Dataset is derived",
            "title": "DerivedFromId",
            "type": "string",
            "format": "uuid",
            "pattern":"^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        },
        "logisticalSampleId": {
            "description": "uuid for LogisticalSample related to Dataset",
            "title": "LogisticalSampleId",
            "type": "string",
            "format": "uuid",
            "pattern":"^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        }
    },
    "allOf": [
      {
        "if": {
          "required": [
            "sourceId"
          ]
        },
        "then": {
          "not": {
            "required": [
              "derivedFromId"
            ]
          }
        }
      },
      {
        "if": {
          "required": [
            "derivedFromId"
          ]
        },
        "then": {
          "not": {
            "required": [
              "sourceId"
            ]
          }
        }
      }
    ]
}
