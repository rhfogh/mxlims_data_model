{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Base class for MXLIMS Datasets",
    "title": "Dataset",
    "type": "object",
    "allOf": [
        {
            "$ref": "../data/DatasetData.json"
        }
    ],
    "properties": {
        "sourceRef": {
            "$ref": "../core/JobRef.json"
        },
        "derivedFromRef": {
            "$ref": "../core/DatasetRef.json"
        },
        "logisticalSampleRef": {
            "$ref": "../core/LogisticalSampleRef.json"
        }
    },
    "not": {
        "oneOf": [
            {
                "required": [
                    "sourceRef"
                ]
            },
            {
                "required": [
                    "derivedFromRef"
                ]
            }
        ]
    }
}
