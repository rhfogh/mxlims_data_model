{
    "$id": "https://mxlims.org/schemas/core/BasicTypes.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$defs": {
        "AwareDatetime": {
            "format": "date-time",
            "type": "string",
            "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])T([01][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9](\\.[0-9]+)?(Z|[+-]([01][0-9]|2[0-3]):[0-5][0-9])$"
        },
        "HttpUrl": {
            "format": "uri",
            "type": "string",
            "pattern": "^https?://(?:[a-zA-Z0-9\\-]+\\.)+[a-zA-Z]{2,}(?::\\d+)?(?:/[^\\s]*)?$"
        }
    }
}