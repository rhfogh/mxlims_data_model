{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Base class for MXLIMS Logistical Samples\n\ndescribing Sample containers and locations\n(from Dewars and Plates to drops, pins and crystals)",
    "title": "LogisticalSample",
    "type": "object",
    "properties": {
        "sampleId": {
            "description": "uuid for constituent sample",
            "title": "SampleId",
            "type": "string",
            "format": "uuid",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "containerId": {
            "description": "uuid for LogisticalSample container",
            "title": "containerId",
            "type": "string",
            "format": "uuid",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        }
    }
}
