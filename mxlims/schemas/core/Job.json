{
    "$schema": "https://json-schema.org/draft-07/schema",
    "description": "Base class for MXLIMS Jobs - an experiment or calculation producing Datasets",
    "title": "Job",
    "type": "object",
    "properties": {
        "sampleRef": {
            "$ref": "../core/PreparedSampleRef.json"
        },
        "startedFromRef": {
            "$ref": "../core/JobRef.json"
        },
        "logisticalSampleRef": {
            "$ref": "../core/LogisticalSampleRef.json"
        },
        "referenceDataRefs": {
            "type": "array",
            "items": {
                "$ref": "../core/DatasetRef.json"
            }
        },
        "templateDataRefs": {
            "type": "array",
            "items": {
                "$ref": "../core/DatasetRef.json"
            }
        },
        "inputDataRefs": {
            "type": "array",
            "items": {
                "$ref": "../core/DatasetRef.json"
            }
        }
    }
}
