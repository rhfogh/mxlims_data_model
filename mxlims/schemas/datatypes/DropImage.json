{
    "$id": "https://mxlims.org/schemas/datatypes/DropImage.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "DropImage",
    "description": "An image of a crystallization drop.",
    "properties": {
        "mimeType": {
            "allOf": [
                {
                    "$ref": "../datatypes/ImageMimeType.json"
                }
            ],
            "description": "The MIME type of the image."
        },
        "lightType": {
            "allOf": [
                {
                    "$ref": "../datatypes/ImageLightType.json"
                }
            ],
            "description": "The light used to capture the image."
        },
        "timestamp": {
            "allOf": [
                {
                    "$ref": "../core/BasicTypes.json#/$defs/AwareDatetime"
                }
            ],
            "description": "The date and time when the image was captured. This is to be specified in UTC and conform to ISO 8601.",
            "examples": [
                "2024-04-24T14:30:16Z",
                "20240424T143016Z"
            ]
        },
        "data": {
            "type": "string",
            "description": "The image, UUencoded."
        },
        "url": {
            "allOf": [
                {
                    "$ref": "../core/BasicTypes.json#/$defs/HttpUrl"
                }
            ],
            "description": "A URL where the image can be found ('http' ot 'https'). It is assumed that no further authentication is needed to read this image."
        }
    },
    "allOf": [
        {
            "if": {
                "required": [
                    "data"
                ]
            },
            "then": {
                "not": {
                    "required": [
                        "url"
                    ]
                }
            }
        },
        {
            "if": {
                "not": {
                    "required": [
                        "data"
                    ]
                }
            },
            "then": {
                "required": [
                    "url"
                ]
            }
        }
    ],
    "required": [
        "mimeType"
    ]
}