{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Person",
    "title": "Person",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The person's full name."
        },
        "emailAddress": {
            "type": "string",
            "description": "The person's email address."
        },
        "phoneNumber": {
            "type": "string",
            "description": "The person's phone number."
        }
    },
    "allOf": [
        {"required": ["name"]},
        {
            "anyOf": [
                {
                    "required": [
                        "emailAddress"
                    ]
                },
                {
                    "required": [
                        "phoneNumber"
                    ]
                }
            ]
        }
    ],
    "additionalProperties": false
}
