{
    "$id": "https://mxlims.org/schemas/datatypes/SampleComponent.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description" : "Component of Sample.",
    "title": "SampleComponent",
    "type": "object",
    "properties": {
        "acronym": {
            "description": "Acronym - short synonym of component (e.g. 'lig1'",
            "title": "Acronym",
            "type": "string"
        },
        "name": {
            "type": "string",
            "description": "Human readable name of component",
            "title": "Name"
        },
        "role": {
            "allOf": [
                {
                    "$ref": "../datatypes/SampleComponentRole.json"
                }
            ]
        },
        "smiles": {
            "type": "string",
            "description": "Smile string defining component",
            "title": "Smiles"
        },
        "selfies": {
            "type": "string",
            "description": "Selfies string defining component",
            "title": "Smiles"
        },
        "sequence": {
            "type": "string",
            "description": "Sequence string defining component",
            "title": "Smiles"
        },
        "identifiers": {
            "description": "Keyword-value dictionary string:string of site-specific object identifiers. The key must be a valid domain name pointing to the site 'owning' the extensions, but need not be resolvable.",
            "title": "Identifiers",
            "type": "object",
            "patternProperties": {
                "^(?i)(?:[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?\\.)+[a-z0-9][a-z0-9-]{0,61}[a-z0-9]$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "urls": {
            "description": "Keyword-value dictionary string:urlstring of site-specific object urls. The key must be a valid domain name pointing to the site 'owning' the extensions, but need not be resolvable.",
            "title": "Urls",
            "type": "object",
            "propertyNames": {
              "pattern":  "^(?i)(?:[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?\\.)+[a-z0-9][a-z0-9-]{0,61}[a-z0-9]$"
            },
            "additionalProperties": {
                "allOf": [
                    {
                        "$ref": "../core/BasicTypes.json#/$defs/HttpUrl"
                    }
                ]
            }
        }
    },
    "additionalProperties": false
}